#!/usr/bin/env bash

# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "🔒 lock\n🚪 leave $WM\n♻️ renew $WM\n🐻 hibernate\n🔃 reboot\n🖥️shutdown\n💤 sleep\n📺 display off" | rofi -dmenu -p Action)" in
	'🔒 lock') swaylock ;;
	"🚪 leave $WM") hyprctl dispatch exit ;;
	"♻️ renew $WM") hyprctl reload && killall waybar && nohup waybar & ;;
	'🐻 hibernate') $ctl hibernate -i ;;
	'💤 sleep') $ctl suspend -i ;;
	'🔃 reboot') $ctl reboot -i ;;
	'🖥️shutdown') $ctl poweroff -i ;;
	*) exit 1 ;;
esac
