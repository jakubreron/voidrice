#!/usr/bin/env bash

# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ’¤ sleep\nğŸ“º display off" | rofi -dmenu -p Action)" in
	'ğŸ”’ lock') swaylock ;;
	"ğŸšª leave $WM") hyprctl dispatch exit ;;
	"â™»ï¸ renew $WM") hyprctl reload && killall waybar && nohup waybar & ;;
	'ğŸ» hibernate') $ctl hibernate -i ;;
	'ğŸ’¤ sleep') $ctl suspend -i ;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	*) exit 1 ;;
esac
