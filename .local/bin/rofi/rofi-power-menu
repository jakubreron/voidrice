#!/usr/bin/env bash

# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ğŸ”’ lock\nğŸšª logout $WM\nâ™»ï¸ renew $WM\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nâ¸ï¸ suspend\nğŸ’¤ hibernate\nğŸ“º display off" | rofi -dmenu -p Action)" in
	'ğŸ”’ lock') hyprlock ;;
	"ğŸšª logout $WM") hyprshutdown ;;
	"â™»ï¸ renew $WM") hyprctl reload;;
	'â¸ï¸ suspend') $ctl suspend-then-hibernate -i ;;
	'ğŸ’¤ hibernate') $ctl hibernate -i ;;
	'ğŸ”ƒ reboot') hyprshutdown -t 'Restarting...' --post-cmd 'reboot' ;;
	'ğŸ–¥ï¸shutdown') hyprshutdown -t 'Shutting down...' --post-cmd 'shutdown -P 0' ;;
	*) exit 1 ;;
esac
