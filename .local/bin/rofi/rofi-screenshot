#!/usr/bin/env bash

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.

# variables
path="$XDG_PICTURES_DIR/Screenshots"
output="$(date '+%y%m%d-%H%M-%S').png"

case "$(printf "a selected area\\nfull screen\\na selected area (edit)\\nfull screen (edit)" | rofi -dmenu -p "Screenshot which area?")" in
    "a selected area") grim -g "$(slurp)" ${path}/pic-selected-"${output}" ;;
    "full screen") grim ${path}/pic-full-"${output}" ;;
    "a selected area (edit)") grim -g "$(slurp)" - | swappy -f - ;;
    "full screen (edit)") grim - | swappy -f - ;;
esac
