#!/usr/bin/env bash

while true; do
  APP_PID=$(pgrep keyd-applicatio)

  if [ -z "$APP_PID" ]; then
    keyd-application-mapper -d -q
  else
    MAX_MEMORY_USAGE=50000 # 50MB
    MEMORY_USAGE=$(ps -o rss= -p "$APP_PID")

    if [ "$MEMORY_USAGE" -gt "$MAX_MEMORY_USAGE" ]; then
      kill -9 "$APP_PID"
      sleep
      keyd-application-mapper -d -q
    fi

  fi

  sleep 1m
done
