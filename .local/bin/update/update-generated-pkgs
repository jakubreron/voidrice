#!/bin/sh

log() {
  message="$1"
  echo -e "\033[1mâ³ $message...\033[0m"
}

path="$PKGLIST_DIR/$PACKAGE_TYPE"

if [ -d "$path" ]; then 
  if command -v yarn &> /dev/null; then
    log "Generating Yarn Packages"
    yarn global list --depth=0 | awk '/info/{print $2}' | sed -e 's/\"//g' > "$path/yarn.txt"
  fi

  generate_linux_pkgs() {
    if command -v paru &> /dev/null; then
      manager=paru
    elif command -v yay &> /dev/null; then
      manager=yay
    else
      manager=pacman
    fi

    log "Generating $manager Packages"
    $manager -Qqe > "$path/pacman.txt";
    $manager -Qqe | grep 'php' | sed -r "s/\b('phpstorm|phpstorm-jre')//g" > "$path/php.txt"
  }

  generate_macos_pkgs() {
    if command -v brew &> /dev/null; then
      log "Generating Brew Packages"
      brew leaves > "$path/brew.txt"
      brew list --cask > "$path/brew-casks.txt"
    fi
  }

  if [[ $OSTYPE == 'linux'* ]]; then
    generate_linux_pkgs
  else
    generate_macos_pkgs
  fi

  if [ -d "$PKGLIST_DIR/.git" ] && [ -d "$HOME/.ssh" ]; then
    git -C "$PKGLIST_DIR" add .
    git -C "$PKGLIST_DIR" commit -m "docs: auto-commit-changes"
    git -C "$PKGLIST_DIR" push
  fi
fi
