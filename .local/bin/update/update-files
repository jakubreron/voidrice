#!/bin/sh

if command -v git-sync-repos &> /dev/null; then
  echo -e "\033[1m⏳ Synchronizing repos...\033[0m"
  git-sync-repos 'dotfiles'
fi

if [[ $OSTYPE == 'linux'* ]]; then
  echo -e "\033[1m⏳ Synchronizing Google Drive...\033[0m"
  if command -v grive &> /dev/null; then
    grive --path $CLOUD_DIR
  fi
fi
