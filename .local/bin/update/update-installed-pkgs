#!/bin/sh

log() {
  message="$1"
  echo -e "\033[1m⏳ $message...\033[0m"
}

if command -v npm &> /dev/null; then
  log "Updating NPM Packages"
  sudo npm install npm -g
fi

if command -v yarn &> /dev/null; then
  log "Updating Yarn Packages"
  yarn global upgrade
fi

update_linux_pkgs() {
  if command -v $PACKAGE_MANAGER &> /dev/null; then
    log "Updating $PACKAGE_MANAGER Packages"
    $PACKAGE_MANAGER -Syu --noconfirm
  fi

  compile() {
    path="$1"
    log "Compiling $path"
    [ -d "$path" ] && sudo make -C "$path" && sudo make install -C "$path"
  }

  compile "$XDG_SRC_HOME/dwm"
  compile "$XDG_SRC_HOME/dwmblocks"
  compile "$XDG_SRC_HOME/dmenu"
  compile "$XDG_SRC_HOME/st"
  compile "$XDG_SRC_HOME/sxiv-flexipatch"
}

update_macos_pkgs() {
  if command -v brew &> /dev/null; then
    log "Updating Brew Packages"
    brew update
    brew upgrade
    brew cleanup
  fi

  log "Updating Software Packages"
  softwareupdate -i -a

  if command -v gem &> /dev/null; then
    log "Updating Gem Packages"
    sudo gem update --system
    sudo gem update
    sudo gem cleanup
  fi

  # sudo port selfupdate
  # sudo port upgrade outdated
}

if [[ $OSTYPE == 'linux'* ]]; then
  update_linux_pkgs
else
  update_macos_pkgs
fi
