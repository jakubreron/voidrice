#!/bin/sh

if command -v npm >/dev/null 2>&1; then
  log-pretty-message "Updating NPM packages" "ðŸ’©"
  sudo npm install npm -g
fi

if command -v yarn >/dev/null 2>&1; then
  log-pretty-message "Updating yarn packages" "ðŸ§¶"
  yarn global upgrade
fi

update_linux_pkgs() {
  if command -v "$PACKAGE_MANAGER" >/dev/null 2>&1; then
    log-pretty-message "Updating $PACKAGE_MANAGER packages" "ðŸ“¦"
    $PACKAGE_MANAGER -Syu --noconfirm
  fi

  compile() {
    path="$1"
    log-pretty-message "Compiling $path"
    [ -d "$path" ] && sudo make -C "$path" && sudo make install -C "$path"
  }

  compile "$XDG_SRC_HOME/dwm"
  compile "$XDG_SRC_HOME/dwmblocks"
  compile "$XDG_SRC_HOME/dmenu"
  compile "$XDG_SRC_HOME/st"
  compile "$XDG_SRC_HOME/sxiv-flexipatch"
}

update_macos_pkgs() {
  if command -v brew >/dev/null 2>&1; then
    log-pretty-message "Updating brew packages" "ðŸº"
    brew update
    brew upgrade
    brew cleanup
  fi

  log-pretty-message "Updating software packages"
  softwareupdate -i -a

  if command -v gem >/dev/null 2>&1; then
    log-pretty-message "Updating gem packages" "ðŸ’Ž"
    sudo gem update --system
    sudo gem update
    sudo gem cleanup
  fi

  # sudo port selfupdate
  # sudo port upgrade outdated
}

case "$(uname -s)" in
  Linux*)
    update_linux_pkgs
    ;;
  *)
    update_macos_pkgs
    ;;
esac
