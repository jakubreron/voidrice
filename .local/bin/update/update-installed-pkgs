#!/bin/sh

if command -v npm &> /dev/null; then
  log-pretty-message "Updating NPM Packages"
  sudo npm install npm -g
fi

if command -v yarn &> /dev/null; then
  log-pretty-message "Updating Yarn Packages"
  yarn global upgrade
fi

update_linux_pkgs() {
  if command -v $PACKAGE_MANAGER &> /dev/null; then
    log-pretty-message "Updating $PACKAGE_MANAGER Packages"
    $PACKAGE_MANAGER -Syu --noconfirm
  fi

  compile() {
    path="$1"
    log-pretty-message "Compiling $path"
    [ -d "$path" ] && sudo make -C "$path" && sudo make install -C "$path"
  }

  compile "$XDG_SRC_HOME/dwm"
  compile "$XDG_SRC_HOME/dwmblocks"
  compile "$XDG_SRC_HOME/dmenu"
  compile "$XDG_SRC_HOME/st"
  compile "$XDG_SRC_HOME/sxiv-flexipatch"
}

update_macos_pkgs() {
  if command -v brew &> /dev/null; then
    log-pretty-message "Updating Brew Packages"
    brew update
    brew upgrade
    brew cleanup
  fi

  log-pretty-message "Updating Software Packages"
  softwareupdate -i -a

  if command -v gem &> /dev/null; then
    log-pretty-message "Updating Gem Packages"
    sudo gem update --system
    sudo gem update
    sudo gem cleanup
  fi

  # sudo port selfupdate
  # sudo port upgrade outdated
}

if [[ $OSTYPE == 'linux'* ]]; then
  update_linux_pkgs
else
  update_macos_pkgs
fi
