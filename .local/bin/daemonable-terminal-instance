#!/usr/bin/env bash
if [ "$STARTUP_DESKTOP" = 'Wayland' ]; then
  socket_path="/run/user/1000/Alacritty-wayland-1-50274.sock"
fi

if [ "$STARTUP_DESKTOP" = 'X11' ]; then
  socket_path="/run/user/1000/Alacritty-:0-37430.sock"
fi

command="alacritty --socket $socket_path"

if [ -e "$socket_path" ]; then
  $command msg create-window "$@"
else
  $command "$@"
fi
