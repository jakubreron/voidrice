#!/usr/bin/env bash

set -euo pipefail

# NOTE: single folders with echo
# echo "$LVIM_SHARE_DIR"

# NOTE: There's a faster way to find Git repositories, but this works for nested repos.
# https://bit.ly/3pyUGDp
find "$XDG_SRC_HOME" "$DOTFILES_DIR" "$PROJECTS_DIR" "$VALET_DIR/Sites" -type d -exec test -e '{}/.git' ';' -print -prune
