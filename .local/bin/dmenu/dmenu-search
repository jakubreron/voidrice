#!/bin/sh

LAUNCHER="dmenu -l 30 -i -p "
[ -z "${DISPLAY}" ] && LAUNCHER="fzf --prompt "

localBROWSER="$BROWSER "

if [ -f ~/.config/bm-websites ]; then
	choice=$( (cat ~/.config/bm-websites) | $LAUNCHER"Search:") || exit 1
fi

case "$choice" in *‚ùî*)
	$localBROWSER"https://duckduckgo.com"
	exit ;;
http*)
	$localBROWSER"$(echo $choice | awk '{print $1}')"
	exit ;;
*) $localBROWSER"https://duckduckgo.com/?q=$choice"
	exit ;;
esac
#vim:ft=sh
