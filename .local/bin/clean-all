#!/bin/sh

case "$(uname -s)" in
  Linux*)
    if command -v "$PACKAGE_MANAGER" >/dev/null 2>&1; then
      log-pretty-message "Cleaning the $PACKAGE_MANAGER cache" "ğŸ§¹ğŸ“¦"
      $PACKAGE_MANAGER -Sc --noconfirm
    fi

    if command -v pacman >/dev/null 2>&1; then
      log-pretty-message "Cleaning unused pacman dependencies" "ğŸ§¹ğŸ“¦"
      sudo pacman -Rns --noconfirm "$(pacman -Qtdq)"
    fi

    if command -v profile-cleaner >/dev/null 2>&1; then
      log-pretty-message "Cleaning the firefox profile" "ğŸ§¹ğŸ¦Š"
      profile-cleaner f
    fi
    ;;
  *)
    log-pretty-message "Cleaning the DS_Store rubbish" "ğŸ§¹ğŸ"
    find . -type f -name '*.DS_Store' -ls -delete
    ;;
esac
