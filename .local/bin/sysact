#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "ï€£ lock\nï‹µ leave dwm\nï–ªï¸ renew dwm\nïˆ¶ hibernate\nğŸ’¤ sleep\nï€¡ reboot\nï€‘ï¸shutdown\nïƒ« display off" | dmenu -i -p 'Action: ')" in
	'ï€£ lock') slock ;;
	'ï‹µ leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ï¸ï–ª renew dwm') kill -HUP "$(pgrep -u "$USER" "\bdwm$")" ;;
	'ïˆ¶ hibernate') slock $ctl hibernate ;;
	'ğŸ’¤ sleep') slock $ctl suspend ;;
	'ï€¡ reboot') $ctl reboot ;;
	'ï€‘ï¸shutdown') $ctl poweroff ;;
	'ğŸ“º display off') xset dpms force off ;;
	*) exit 1 ;;
esac
