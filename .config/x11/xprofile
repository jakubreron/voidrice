#!/bin/sh

# This file runs when a DM logs you into a graphical session.
# If you use startx/xinit like a Chad, this file will also be sourced.

# Wallpaper with some wal arguments
setbg "" "false" &			                               

# Xresources colors/settings on startup
xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources & xrdbpid=$!	 

# Switching caps/esc, adjusting speed, etc...
remaps &		                                                         

autostart="picom dunst unclutter keepassxc redshift fcitx /usr/lib/kdeconnectd"
for program in $autostart; do
	pidof -s "$program" || "$program" &
done >/dev/null 2>&1

# Equalizer
# TODO: move to autostart (after figuring out how to include arguments)
# easyeffects --gapplication-service &															

# Weird thingy needed for Kinto to work
# xhost +SI:localuser:root &

# Pull newest changes form all my repos in the background
git-sync-repos global &			

# Screen layouts
# layout-primary &
# layout-secondary &
# layout-temporary &

# Ensure that xrdb has finished running before moving on to start the WM/DE.
[ -n "$xrdbpid" ] && wait "$xrdbpid"
