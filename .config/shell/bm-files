# These files automatically update when edited/saved in vim:
# keys	filename				description
bf	${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-files	# This file, a list of bookmarked files
bd	${XDG_CONFIG_HOME:-$HOME/.config}/shell/bm-dirs		# A list of bookmarked directories similar to this file
cfx	${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources	# Colors, themes and variables for X11
cfdb	~/.local/src/dwmblocks/config.h
cfdw	~/.local/src/dwm/config.h
cfdm	~/.local/src/dmenu/config.h
cfst	~/.local/src/st/config.h


# These do not update automatically, but on the next new instance of a program:
cfz	$ZDOTDIR/.zshrc						# zsh (shell) config
cfa	${XDG_CONFIG_HOME:-$HOME/.config}/shell/aliasrc		# aliases used by zsh (and potentially other shells)
cfp	${XDG_CONFIG_HOME:-$HOME/.config}/shell/profile		# profile file for login settings for zsh
cfP	${XDG_CONFIG_HOME:-$HOME/.config}/picom.conf  		# composition manager
cfi	${XDG_CONFIG_HOME:-$HOME/.config}/x11/xprofile		# x11 profile init settings
cfm	${XDG_CONFIG_HOME:-$HOME/.config}/mutt/muttrc		# mutt (email client) config
cfnb	${XDG_CONFIG_HOME:-$HOME/.config}/newsboat/config	# newsboat (RSS reader)
cfnbu	${XDG_CONFIG_HOME:-$HOME/.config}/newsboat/urls		# RSS urls for newsboat
cfl	${XDG_CONFIG_HOME:-$HOME/.config}/lf/lfrc		# lf (file browser) config

## Some personal configs
cft	~/.ticker.yaml # stonks
cfb	${XDG_CONFIG_HOME:-$HOME/.config}/personal/universal/.config/bookmarks # website bookmarks
cfg	${XDG_CONFIG_HOME:-$HOME/.config}/personal/universal/.config/git/config # gitconfig

dca ${XDG_CONFIG_HOME:-$HOME/.config}/personal/arch/README.md
dcu ${XDG_CONFIG_HOME:-$HOME/.config}/personal/universal/README.md
cfG /etc/default/grub

# lvim
cflv ${XDG_CONFIG_HOME:-$HOME/.config}/lvim/config.lua
