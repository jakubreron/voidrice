#!/bin/zsh

unsetopt PROMPT_SP

# TODO: remove dotnet after graduating
bin_list=(
  "$HOME/.local/share/cargo/bin"
  "$HOME/.dotnet/tools"
  )

for extra in "${bin_list[@]}"; do
  PATH=$extra:$PATH
done
export PATH
unset bin_list

function __setup_programs() {
  export EDITOR="lvim"
  export GIT_EDITOR="$EDITOR"
  export SUDO_EDITOR="/usr/bin/nvim"

  export CLI_SYSTEM_MONITOR="btop"
  export CLI_STOCKS_APP="ticker"
  export CLI_CRYPTO_APP="cointop"
  export CLI_GIT_APP="lazygit"
  export CLI_DOCKER_APP="lazydocker"
}

function __setup_xdg_dirs() {
  # export XDG_DESKTOP_DIR="$HOME/Desktop"
  export XDG_DOCUMENTS_DIR="$HOME/Documents"
  export XDG_DOWNLOAD_DIR="$HOME/Downloads"
  export XDG_MUSIC_DIR="$HOME/Music"
  export XDG_PICTURES_DIR="$HOME/Pictures"
  # export XDG_PUBLICSHARE_DIR="$HOME/Public"
  # export XDG_TEMPLATES_DIR="$HOME/Templates"
  export XDG_VIDEOS_DIR="$HOME/Videos"

  export XDG_CONFIG_HOME="$HOME/.config"
  export XDG_DATA_HOME="$HOME/.local/share"
  export XDG_SRC_HOME="$HOME/.local/src"
  export XDG_BIN_HOME="$HOME/.local/bin"
  export XDG_CACHE_HOME="$HOME/.cache"

}

function __setup_custom_dirs() {
  export CLOUD_DIR="$HOME/Cloud"
  export TORRENTS_DIR="$XDG_DOCUMENTS_DIR/Torrents"
  export DOTFILES_DIR="$XDG_CONFIG_HOME/personal"
  export PKGLIST_DIR="$DOTFILES_DIR/pkglists"

  export PROJECTS_DIR="$XDG_DOCUMENTS_DIR/Projects"

  export LVIM_CONFIG_DIR="$XDG_CONFIG_HOME/lvim"
  export LVIM_SHARE_DIR="$XDG_DATA_HOME/lunarvim/lvim"
  export VIMWIKI_DIR="$DOTFILES_DIR/universal/Documents/VimWiki"
}

function __setup_zsh() {
  export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
  export HISTFILE="$ZDOTDIR/.zsh_history"
  export HISTSIZE=100000
  export HISTIGNORE="ls:ps:history"
  export SAVEHIST=100000
}

function __setup_settings() {
  export MANPAGER="$EDITOR +Man!"
  export MANWIDTH=999
  export MCFLY_KEY_SCHEME=vim
  export NOTMUCH_CONFIG="$XDG_CONFIG_HOME/notmuch-config"
  export LESSHISTFILE="-"
  export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
  export INPUTRC="$XDG_CONFIG_HOME/shell/inputrc"
  export DBUS_SESSION_BUS_ADDRESS="unix:path=/run/user/1000/bus"
  export WINEPREFIX="$XDG_DATA_HOME/wineprefixes/default"
  export PASSWORD_STORE_DIR="$XDG_DATA_HOME/password-store"
  export TMUX_TMPDIR="$XDG_RUNTIME_DIR"
  export CARGO_HOME="$XDG_DATA_HOME/cargo"
  export GOPATH="$XDG_DATA_HOME/go"
  export MBSYNCRC="$XDG_CONFIG_HOME/mbsync/config"
  export GTK2_RC_FILES="$XDG_CONFIG_HOME/gtk-2.0/gtkrc"
  export MOZ_USE_XINPUT2=1		# Mozilla smooth scrolling/touchpads.
  export AWT_TOOLKIT="MToolkit wmname LG3D"	# May have to install wmname
  export FZF_DEFAULT_OPTS='--preview "bat --line-range :500 {}"' # preview

  export LESS=-R
  export LESS_TERMCAP_mb="$(printf '%b' '[1;31m')"
  export LESS_TERMCAP_md="$(printf '%b' '[1;36m')"
  export LESS_TERMCAP_me="$(printf '%b' '[0m')"
  export LESS_TERMCAP_so="$(printf '%b' '[01;44;33m')"
  export LESS_TERMCAP_se="$(printf '%b' '[0m')"
  export LESS_TERMCAP_us="$(printf '%b' '[1;32m')"
  export LESS_TERMCAP_ue="$(printf '%b' '[0m')"
  export LESSOPEN="| /usr/bin/highlight -O ansi %s 2>/dev/null"
}

setup_functions=(
  __setup_programs
  __setup_xdg_dirs
  __setup_custom_dirs
  __setup_zsh
  __setup_settings
)

for func in "${setup_functions[@]}"; do
  "$func"
  unset -f "$func"
done
unset setup_functions
