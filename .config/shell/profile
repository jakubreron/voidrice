#!/usr/bin/env zsh

# NOTE: read once, at login (variables and settings that don't need to be updated frequently)

OS="$(uname -s)"

source $HOME/.config/shell/profile.all

case "$OS" in
  Linux)
    source $HOME/.config/shell/profile.linux
    ;;
  Darwin)
    source $HOME/.config/shell/profile.osx
    ;;
esac

unsetopt PROMPT_SP
